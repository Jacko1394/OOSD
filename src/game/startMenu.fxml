<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="120"
      fx:controller="game.MenuController"
      alignment="CENTER">

    <Label text="Boom Sum"
           textAlignment="CENTER"
           textFill="black">
        <font>
            <Font name="Comic Sans MS" size="96"/>
        </font>
    </Label>

    <HBox spacing="200"
          alignment="CENTER">

        <Button text="One Player (AI mode)"
                onAction="#onePlayerClicked"
                scaleX="2"
                scaleY="2"/>

        <Button text="Two Player"
                onAction="#twoPlayerClicked"
                scaleX="2"
                scaleY="2"/>

    </HBox>

    <Button text="Exit"
            onAction="#exitClicked"
            scaleX="2"
            scaleY="2"/>

</VBox>
