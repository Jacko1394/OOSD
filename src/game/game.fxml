<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>

<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:id="mainView"
      spacing="60"
      fx:controller="game.GameController"
      alignment="CENTER">

    <VBox alignment="CENTER"
          spacing="120"
          fx:id="controlView">

        <Label fx:id="currentTurnLabel"
               text="Current turn: "
               wrapText="true"
               textFill="black">
            <font>
                <Font name="Comic Sans MS" size="64"/>
            </font>
        </Label>

        <HBox alignment="CENTER"
              spacing="80"
              fx:id="diceView">
            <Label fx:id="info"
                   text="5"
                   translateX="60"
                   translateY="10">
                <font>
                    <Font name="Comic Sans MS" size="15"/>
                </font>
            </Label>

            <Pane>

                <Rectangle width="200"
                           height="200"/>

                <Rectangle width="180"
                           fill="chocolate"
                           x="10"
                           y="10"
                           height="180"/>

                <Label fx:id="diceNumber"
                       text="5"
                       textFill="black"
                       translateX="60"
                       translateY="10">
                    <font>
                        <Font name="Comic Sans MS" size="128"/>
                    </font>
                </Label>

            </Pane>

            <Button text="Roll"
                    onAction="#rollClicked"
                    scaleX="2"
                    scaleY="2"/>

        </HBox>

    <VBox alignment="CENTER_LEFT"
          spacing="-10"
          fx:id="teamsView"/>

    </VBox>

    <VBox alignment="CENTER"
          fx:id="boardVbox"/>

</HBox>
